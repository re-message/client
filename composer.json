    "require": {
        "php": "^7.4",
        "relmsg/message": "^0.9",
        "psr/http-message": "^1.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/event-dispatcher": "^1.0",
        "psr/log": "^1.1",
        "symfony/service-contracts": "^1.0|^2"
    },
    "require-dev": {
