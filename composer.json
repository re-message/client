{
    "name": "relmsg/client",
    "description": "A Relations Messenger Client",
    "type": "library",
    "license": "Apache-2.0",
    "homepage": "https://dev.relmsg.ru/packages/client",
    "authors": [
        {
            "name": "Oleg Kozlov",
